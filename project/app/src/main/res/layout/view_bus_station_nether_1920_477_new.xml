<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_station_dot"
        android:layout_width="11px"
        android:layout_height="11px"
        android:layout_marginLeft="6px"
        android:background="@drawable/station_dot_black_u_new" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="190px"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_station_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-3dp"
            android:ems="1"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="19"
            android:textColor="@color/general_font_color_black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center_horizontal"
            android:maxLines="7"
            android:text="南三环大学路站"
            android:textColor="@color/general_font_color_black"
            android:textSize="22px"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>