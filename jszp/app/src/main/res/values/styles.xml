<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/title_green</item>
		<item name="colorPrimaryDark">@color/title_green</item>
		<item name="colorAccent">@color/title_green</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="checkboxstyle" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:button">@drawable/select_driver_cb</item>
	</style>

	<style name="checkboxstyle_send" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:button">@drawable/select_send_check_cb</item>
	</style>

	<style name="checkboxstyle_return" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:button">@drawable/select_return_cb</item>
	</style>
	<style name="checkboxstyle_fenjian" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:button">@drawable/select_fenjian_cb</item>
	</style>


	<style name="MyEditText" parent="Theme.AppCompat.Light">
		<item name="colorControlNormal">@color/fenge</item>
		<item name="colorControlActivated">@color/fenge</item>
	</style>

	<style name="style_left_iv">
		<item name="android:layout_width">15dp</item>
		<item name="android:layout_height">15dp</item>
		<item name="android:layout_marginRight">16dp</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_centerVertical">true</item>
	</style>

	<style name="style_tv_left">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">38dp</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:textColor">@color/tv_black</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="style_tv_left1">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:textColor">@color/tv_black</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="style_tv_right">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:hint">请选择</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_marginRight">32dp</item>
		<item name="android:textColor">@color/darkgray</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="style_iv_right">
		<item name="android:layout_width">6dp</item>
		<item name="android:layout_height">10dp</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:src">@drawable/more_hui</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_marginRight">18dp</item>
	</style>

	<style name="style_logistic_scan_tv">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">45dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/tv_black</item>
		<item name="android:textSize">16sp</item>
		<item name="android:background">@drawable/bg_gray_coners1</item>
	</style>

	<style name="style_logistic_scan_ll">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
	</style>

	<style name="style_option_rl">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">45dp</item>
		<item name="android:background">@drawable/select_white_bt</item>
	</style>
	<style name="time_dialog" parent="android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowBackground">@color/background</item>
	</style>

	<style name="style_device_info_rl">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">45dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
	</style>

	<style name="style_device_info_tv_left">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:textColor">@color/tv_black</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="style_device_info_tv_right">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/darkgray</item>
	</style>
</resources>
