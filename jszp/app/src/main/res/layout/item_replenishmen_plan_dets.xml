<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="118dp">

    <LinearLayout
        android:id="@+id/ll_replenishment_materiel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_replenishment_materiel"
            android:layout_width="28dp"
            android:layout_height="37dp"
            android:layout_marginTop="15dp"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_equip_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出库任务: " />

                <TextView
                    android:id="@+id/tv_replenishment_odd_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="201805121234567890" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备码描述：" />

                <TextView
                    android:id="@+id/tv_replenishment_device_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2级单相远程费控智能电能表" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出库数量：" />

                <TextView
                    android:id="@+id/tv_replenishment_outgoing_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0/300" />

                <ImageView
                    android:id="@+id/iv_replenishment_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jzsp_replenishment_already_down" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>