<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:paddingBottom="16dp"
	android:paddingTop="14dp">

	<ImageView
		android:id="@+id/iv_device"
		android:layout_width="28dp"
		android:layout_height="37dp"
		android:layout_marginLeft="11dp"
		android:layout_marginRight="10dp"
		android:src="@drawable/dianneng"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="3dp"
		android:layout_toRightOf="@id/iv_device"
		android:orientation="vertical"
		>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="入库任务："
				android:textColor="@color/tv_black"
				android:textSize="14sp"
				/>

			<TextView
				android:id="@+id/tv_in_task_num"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="201805121234567890"
				android:textColor="@color/darkgray"
				android:textSize="14sp"
				/>

		</LinearLayout>

		<TextView
			android:id="@+id/tv_describle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:lineSpacingExtra="3dp"
			android:text="设备码描述：2级单相远程费控智能电能表 (载波/远程/开关内置)"
			android:textColor="@color/darkgray"
			android:textSize="14sp"
			/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/tv_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="2dp"
				android:text="入库数量：20/40"
				android:textColor="@color/darkgray"
				android:textSize="14sp"
				/>

			<TextView
				android:id="@+id/tv_state"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="16dp"
				android:text="已完成"
				android:textColor="@color/title_green"
				android:textSize="14sp"
				/>
		</RelativeLayout>

	</LinearLayout>
</RelativeLayout>
