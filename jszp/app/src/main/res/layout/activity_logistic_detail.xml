<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	tools:context=".activity.LogisticDetailActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<include layout="@layout/layout_title"/>

		<RelativeLayout
			style="@style/style_option_rl">

			<TextView
				style="@style/style_tv_left1"
				android:text="车型"/>

			<TextView
				android:id="@+id/tv_chexing"
				style="@style/style_tv_right"
				android:text="3T"/>


		</RelativeLayout>

		<include layout="@layout/layout_fenge_1dp"/>

		<RelativeLayout
			android:id="@+id/rl_car_num"
			style="@style/style_option_rl">

			<TextView
				style="@style/style_tv_left1"
				android:text="车牌号码"/>

			<TextView
				android:id="@+id/tv_car_num"
				style="@style/style_tv_right"/>

			<ImageView
				style="@style/style_iv_right"/>

		</RelativeLayout>

		<include layout="@layout/layout_fenge_1dp"/>

		<RelativeLayout
			android:id="@+id/rl_driver_name"
			style="@style/style_option_rl">

			<TextView
				style="@style/style_tv_left1"
				android:text="司机姓名"/>

			<TextView
				android:id="@+id/tv_driver_name"
				style="@style/style_tv_right"/>

			<ImageView
				style="@style/style_iv_right"/>

		</RelativeLayout>

		<include layout="@layout/layout_fenge_1dp"/>

		<RelativeLayout
			android:id="@+id/rl_driver_phone"
			style="@style/style_option_rl">

			<TextView
				style="@style/style_tv_left1"
				android:text="司机电话"/>

			<TextView
				android:id="@+id/tv_driver_phone"
				style="@style/style_tv_right"/>

			<ImageView
				style="@style/style_iv_right"/>

		</RelativeLayout>

		<include layout="@layout/layout_fenge_1dp"/>

		<RelativeLayout
			android:id="@+id/rl_time"
			style="@style/style_option_rl">

			<TextView
				style="@style/style_tv_left1"
				android:text="到位时间"/>

			<TextView
				android:id="@+id/tv_time"
				style="@style/style_tv_right"/>

			<ImageView
				style="@style/style_iv_right"/>

		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="7dp"
			android:background="@color/fenge"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:layout_marginTop="20dp"
			android:gravity="center_vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="16dp"
				android:gravity="center_horizontal"
				android:orientation="vertical">

				<ImageView
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:src="@drawable/weizhi_hui"/>

				<View
					android:id="@+id/dotted_line"
					android:layout_width="1dp"
					android:layout_height="match_parent"
					android:background="@drawable/shape_yoko_xuxian"
					android:layerType="software"
					/>
			</LinearLayout>

			<TextView
				android:id="@+id/tv_address"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_weight="1"
				android:text="南京分公司"
				android:textColor="@color/tv_black"
				android:textSize="14sp"

				/>

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_weight="1"
				android:gravity="center"
				android:text="去程配送"
				android:textColor="@color/tv_black"
				android:textSize="14sp"

				/>

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="20dp"
				android:layout_weight="1"
				android:gravity="center"
				android:text="返程配送"
				android:textColor="@color/tv_black"
				android:textSize="14sp"
				/>
		</LinearLayout>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/rv_orders"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
	</LinearLayout>
</android.support.v4.widget.NestedScrollView>