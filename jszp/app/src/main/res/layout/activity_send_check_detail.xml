<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	tools:context=".activity.SendCheckDetailActivity">

	<include layout="@layout/layout_title"/>

	<RelativeLayout
		android:id="@+id/rl_logistics_detail"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:padding="16dp"
		android:layout_below="@id/rl_title"
		>

		<TextView
			android:id="@+id/tv_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:text="待出发"
			android:textColor="@color/color_ls_status_o"
			android:textSize="13dp"
			/>

		<TextView
			android:id="@+id/tv_wu_liu"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/tv_status"
			android:text="物流出发"
			android:layout_marginRight="16dp"
			android:drawableLeft="@drawable/huoche"
			android:drawablePadding="8dp"
			android:textSize="16sp"
			android:textColor="@color/text2"
			/>

		<TextView
			android:id="@+id/tv_task_no"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="配送任务:"
			android:layout_below="@id/tv_wu_liu"
			android:layout_marginTop="8dp"

			android:textColor="@color/darkgray"
			android:textSize="13sp"
			/>
		<TextView
			android:id="@+id/tv_car_no"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="车辆号码："
			android:layout_below="@id/tv_task_no"
			android:layout_marginTop="8dp"

			android:textColor="@color/darkgray"
			android:textSize="13sp"
			/>
		<TextView
			android:id="@+id/tv_driver"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="司机信息："
			android:layout_below="@id/tv_car_no"
			android:layout_marginTop="8dp"

			android:textColor="@color/darkgray"
			android:textSize="13sp"
			/>
		<TextView
			android:id="@+id/tv_box_num"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="设备箱数："
			android:layout_below="@id/tv_driver"
			android:layout_marginTop="8dp"

			android:textColor="@color/darkgray"
			android:textSize="13sp"
			/>

		<TextView
			android:id="@+id/tv_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignStart="@+id/tv_car_no"
			android:layout_below="@+id/tv_task_no"
			android:visibility="gone"
			android:text="15:30"
			android:textColor="@color/darkgray"
			android:textSize="13sp" />
	</RelativeLayout>

	<Button
		android:id="@+id/bt_sure"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_alignParentBottom="true"
		android:background="@drawable/select_white_bt"
		android:text="确认出发"
		android:textColor="@color/title_green"
		android:textSize="16sp"
		/>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:layout_marginLeft="16dp"
		android:layout_below="@+id/rl_logistics_detail"
		android:layout_marginTop="20dp"
		android:layout_marginRight="16dp">

		<ImageView
			android:id="@+id/iv_location"
			android:layout_width="42dp"
			android:layout_height="42dp"
			android:background="@drawable/bg_send_check_left_normal"
			android:paddingBottom="12dp"
			android:paddingLeft="14dp"
			android:paddingRight="14dp"
			android:paddingTop="12dp"
			android:src="@drawable/weizhi_hui"
			/>

		<RelativeLayout
			android:id="@+id/rl_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="-1dp"
			android:background="@drawable/bg_send_check_right_normal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="14dp"
				android:text="即将前往"
				android:textColor="@color/tv_black"
				android:textSize="14sp"
				/>

			<TextView
				android:id="@+id/tv_address"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="14dp"
				android:textColor="@color/tv_black"
				android:textSize="14sp"
				/>
		</RelativeLayout>
	</LinearLayout>

</RelativeLayout>