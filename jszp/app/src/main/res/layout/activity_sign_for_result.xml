<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	tools:context=".activity.SignForResultActivity">

	<TextView
		android:id="@+id/tv_complete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:gravity="center"
		android:paddingBottom="19dp"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:paddingTop="19dp"
		android:text="完成"
		android:textColor="@color/title_green"

		/>

	<ImageView
		android:id="@+id/iv_success"
		android:layout_width="55dp"
		android:layout_height="55dp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="19dp"
		android:src="@drawable/ic_duigou"
		/>

	<TextView
		android:id="@+id/tv_result"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="84dp"
		android:text="签收成功"
		android:textColor="@color/tv_black"
		android:textSize="19sp"

		/>

	<LinearLayout
		android:id="@+id/ll_form"
		android:layout_width="match_parent"
		android:layout_height="95dp"
		android:layout_marginTop="120dp"
		android:gravity="center_vertical"
		android:orientation="vertical"
		android:paddingLeft="16dp"
		android:paddingRight="16dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="配送单编号："
				android:textColor="@color/darkgray"
				android:textSize="14sp"
				/>

			<TextView
				android:id="@+id/tv_order_num"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:text="201805221234567890"
				android:textColor="@color/tv_black"
				android:textSize="14sp"
				/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="9dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="返回签收地点："
				android:textColor="@color/darkgray"
				android:textSize="14sp"
				/>

			<TextView
				android:id="@+id/tv_address"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:text="六合区供电公司"
				android:textColor="@color/tv_black"
				android:textSize="14sp"
				/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="9dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="设备总数："
				android:textColor="@color/darkgray"
				android:textSize="14sp"
				/>

			<TextView
				android:id="@+id/tv_box_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:text="3900只/50箱"
				android:textColor="@color/tv_black"
				android:textSize="14sp"
				/>
		</RelativeLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/ll_form"
		android:orientation="vertical">

		<View
			android:layout_width="match_parent"
			android:layout_height="9dp"
			android:background="@color/fenge"/>

		<ImageView
			android:id="@+id/iv_sign_result"
			android:layout_width="match_parent"
			android:layout_height="165dp"
			android:layout_marginTop="13dp"
			android:layout_marginLeft="13dp"
			android:layout_marginRight="13dp"
			android:src="@drawable/signsuccess"/>
	</LinearLayout>

</RelativeLayout>