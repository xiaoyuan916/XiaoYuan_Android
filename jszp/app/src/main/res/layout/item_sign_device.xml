<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="65dp">

	<ImageView
		android:id="@+id/iv_device"
		android:layout_width="28dp"
		android:layout_height="37dp"
		android:src="@drawable/dianneng"
		android:layout_marginRight="11dp"
		android:layout_marginLeft="11dp"
		android:layout_centerVertical="true"/>
	<TextView
		android:id="@+id/tv_device_count"
		android:layout_width="58dp"
		android:layout_height="match_parent"
		android:gravity="center"
		android:layout_alignParentRight="true"
		android:text="300只"
		android:textColor="@color/title_green"
		android:textSize="14sp"/>
	<TextView
		android:id="@+id/tv_device_name"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_toLeftOf="@id/tv_device_count"
		android:layout_toRightOf="@id/iv_device"
		android:text="0.2S单相智能220V10A单方向 1.0费率"
		android:gravity="center_vertical|left"
		android:paddingRight="10dp"
		android:textColor="@color/tv_black"
		android:textSize="14sp"/>
	<View
		android:layout_width="1dp"
		android:layout_height="match_parent"
		android:background="@color/fenge"
		android:layout_toLeftOf="@id/tv_device_count"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/fenge"/>
</RelativeLayout>