<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="182dp"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:gravity="center_vertical">

		<CheckBox
			android:id="@+id/cb_selected"
			android:layout_width="15dp"
			android:layout_height="15dp"
			android:layout_marginLeft="15dp"
			style="@style/checkboxstyle_return"
			android:clickable="false"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:text="返回任务："
			android:textColor="@color/darkgray"
			android:textSize="16sp"
			/>

		<TextView
			android:id="@+id/tv_task_num"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="241134314"
			android:textColor="@color/title_green"
			android:textSize="16sp"
			/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/iv_saoma"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="16dp"
				android:padding="5dp"
				android:scaleType="center"
				android:src="@drawable/saoma"
				android:background="@drawable/select_return_bt"/>
		</RelativeLayout>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/fenge"/>

	<LinearLayout
		android:id="@+id/ll_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="15dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginTop="15dp"
		android:background="@drawable/select_return_itemll_bt"
		android:orientation="vertical"
		>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="65dp">

			<ImageView
				android:id="@+id/iv_type"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:paddingBottom="14dp"
				android:paddingLeft="11dp"
				android:paddingRight="11dp"
				android:paddingTop="14dp"
				android:src="@drawable/diannengf"
				/>

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="@color/fenge"
				/>

			<TextView
				android:id="@+id/tv_device_name"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:paddingLeft="11dp"
				android:text="0.2S单相智能220V10A单方向1.0费率"
				android:textColor="@color/tv_black"
				android:textSize="14sp"
				android:layout_marginTop="1dp"
				android:layout_marginRight="1dp"
				android:background="@drawable/bg_gray_coners"
				/>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/fenge"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="11dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="计划："
					android:textColor="@color/darkgray"
					android:textSize="14sp"
					/>

				<TextView
					android:id="@+id/tv_plan_num"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="30只"
					android:textColor="@color/darkgray"
					android:textSize="14sp"
					/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="实际："
					android:textColor="@color/title_green"
					android:textSize="14sp"
					/>

				<TextView
					android:id="@+id/tv_real_num"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="--"
					android:textColor="@color/title_green"
					android:textSize="14sp"
					/>
			</LinearLayout>

			<ImageView
				android:layout_width="6dp"
				android:layout_height="11dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="11dp"
				android:src="@drawable/more_hui"

				/>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>