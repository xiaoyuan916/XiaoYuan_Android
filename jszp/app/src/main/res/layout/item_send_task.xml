<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:layout_marginTop="1dp"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/huoche" />

            <TextView
                android:id="@+id/tv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_state"
                android:text="配送任务："
                android:textColor="@color/tv_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_task_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_head"
                android:text="201805221234567890"
                android:textColor="@color/title_green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:text="待发车"
                android:textColor="@color/font1"
                android:textSize="13sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="26dp">

            <TextView
                android:id="@+id/tv_car_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 豫A86F2C "
                android:textColor="@color/darkgray"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="26dp">

            <TextView
                android:id="@+id/tv_dirver_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 李文泽 15638749576 "
                android:textColor="@color/darkgray"
                android:textSize="13sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingLeft="26dp">

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sbzs"
                android:text="3900只/50箱"
                android:textColor="@color/darkgray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginRight="16dp"
                android:text="15:30"
                android:textColor="@color/darkgray"
                android:textSize="13sp" />


        </RelativeLayout>


    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_selecte"
        style="@style/checkboxstyle_send"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>