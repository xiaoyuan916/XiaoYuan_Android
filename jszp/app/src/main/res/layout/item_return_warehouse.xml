<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="78dp"
	android:id="@+id/ll_item"

	android:gravity="center_vertical"
	android:background="@color/white">

	<LinearLayout
		android:id="@+id/ll_return_sign_order"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<ImageView
				android:id="@+id/iv_gongsi"
				android:layout_width="15dp"
				android:layout_height="16dp"
				android:layout_marginLeft="16dp"
				android:src="@drawable/peisongdan" />

			<TextView
				android:id="@+id/tv_return_num"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:text="配送单：2018052212345678" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp">

			<TextView
				android:id="@+id/tv_return_company"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="40dp"
				android:text="返回单位：六合供电公司" />
		</LinearLayout>
	</LinearLayout>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingRight="16dp"
		android:src="@mipmap/more_hui_m" />

</LinearLayout>