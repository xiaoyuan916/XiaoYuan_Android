<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="45dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="16dp"
				android:text="接收单位信息无误"
				android:textColor="@color/tv_black"
				android:textSize="16sp"
				/>

			<CheckBox
				android:id="@+id/iv_receive_right"
				android:layout_width="16dp"
				android:layout_height="16dp"
				style="@style/checkboxstyle"
				android:checked="false"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="16dp"
				/>
		</RelativeLayout>
		<View android:layout_width="match_parent"
			  android:layout_height="1dp"
			  android:background="@color/fenge"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="45dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="16dp"
				android:text="设备数量信息无误"
				android:textColor="@color/tv_black"
				android:textSize="16sp"
				/>

			<CheckBox
				android:id="@+id/iv_count_right"
				android:layout_width="16dp"
				android:layout_height="16dp"
				style="@style/checkboxstyle"
				android:checked="false"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="16dp"
				/>
		</RelativeLayout>
		<View android:layout_width="match_parent"
			  android:layout_height="1dp"
			  android:background="@color/fenge"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="45dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="16dp"
				android:text="设备品规信息无误"
				android:textColor="@color/tv_black"
				android:textSize="16sp"
				/>

			<CheckBox
				android:id="@+id/iv_guige_right"
				android:layout_width="16dp"
				android:layout_height="16dp"
				style="@style/checkboxstyle"
				android:checked="false"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="16dp"
				/>
		</RelativeLayout>
		<View android:layout_width="match_parent"
			  android:layout_height="1dp"
			  android:background="@color/fenge"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="45dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="16dp"
				android:text="备品备件信息无误"
				android:textColor="@color/tv_black"
				android:textSize="16sp"
				/>

			<CheckBox
				android:id="@+id/iv_beijian_right"
				android:layout_width="16dp"
				android:layout_height="16dp"
				style="@style/checkboxstyle"
				android:checked="false"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="16dp"
				/>
		</RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="7dp"
			android:background="@color/fenge"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="45dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="16dp"
				android:text="配送人："
				android:textColor="@color/tv_black"
				android:textSize="16sp"
				/>

			<TextView
				android:id="@+id/tv_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="16dp"
				android:textColor="@color/darkgray"
				/>
		</RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/fenge"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="45dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="16dp"
				android:text="电话："
				android:textColor="@color/tv_black"
				android:textSize="16sp"
				/>

			<TextView
				android:id="@+id/tv_phone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="16dp"
				android:textColor="@color/darkgray"
				android:text="15638476309"
				/>
		</RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/fenge"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="45dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="16dp"
				android:text="车牌号："
				android:textColor="@color/tv_black"
				android:textSize="16sp"
				/>

			<TextView
				android:id="@+id/tv_car_num"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="16dp"
				android:textColor="@color/darkgray"
				android:text="2018-05-07 18:30"
				/>
		</RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/fenge"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="45dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="16dp"
				android:text="时间："
				android:textColor="@color/tv_black"
				android:textSize="16sp"
				/>

			<TextView
				android:id="@+id/tv_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="16dp"
				android:textColor="@color/darkgray"
				android:src="@drawable/duigou_hui"
				android:text="2018-05-07 18:30"
				/>
		</RelativeLayout>

	</LinearLayout>

</ScrollView>