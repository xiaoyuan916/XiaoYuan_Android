<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="85dp">

	<LinearLayout
		android:id="@+id/ll_left"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginLeft="16dp"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<View
			android:id="@+id/v_indicator_order_head"
			android:layout_width="1dp"
			android:layout_height="15dp"
			android:background="@color/fenge"/>
		<ImageView
			android:id="@+id/iv_selected"
			android:layout_width="13dp"
			android:layout_height="13dp"
			android:src="@drawable/jiedian_downhui"/>

		<View
			android:id="@+id/v_indicator_order"
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/fenge"/>
	</LinearLayout>

	<ImageView
		android:id="@+id/iv_right"
		android:layout_width="13dp"
		android:layout_height="8dp"
		android:layout_marginRight="16dp"
		android:src="@mipmap/more_hui"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="10dp"
		android:layout_toLeftOf="@id/iv_right"
		android:layout_toRightOf="@id/ll_left"
		android:layout_marginRight="10dp"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/ll_order"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/tv_order_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="配送单："
				android:textColor="@color/title_green"
				android:textSize="14sp"
				/>

			<TextView
				android:id="@+id/tv_order_num"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/title_green"
				android:textSize="14sp"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="9dp">

			<TextView
				android:id="@+id/tv_address_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="配送地："
				android:textColor="@color/title_green"
				android:textSize="14sp"
				/>

			<TextView
				android:id="@+id/tv_address_content"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/title_green"
				android:textSize="14sp"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="9dp">

			<TextView
				android:id="@+id/tv_boxs_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="设备数量："
				android:textColor="@color/title_green"
				android:textSize="14sp"
				/>

			<TextView
				android:id="@+id/tv_boxs_num"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/title_green"
				android:textSize="14sp"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>