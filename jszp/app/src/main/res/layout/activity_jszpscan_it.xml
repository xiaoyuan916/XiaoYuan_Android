<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.JSZPScanItActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/alphablack2">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:src="@drawable/return_bai"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_return"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/iv_close" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="扫码"
            android:textColor="@color/white"
            android:textSize="19sp"
            />
        <TextView
            android:id="@+id/tv_enter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="输入"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            />


    </RelativeLayout>

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:layout_above="@id/ll_bottom"
         />
    <wangfei.scan2.client.android.AutoScannerView
        android:id="@+id/autoScanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:layout_above="@id/ll_bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:background="#50000000"
        android:layout_below="@id/rl_title"
        android:gravity="center_vertical"
        android:layout_height="53dp">
        <TextView
            android:text="入库任务:   "
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_inbound_task_code"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="2018050812345678"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_inbound_task_count"
            android:layout_width="wrap_content"
            android:text="0/300"
            android:textColor="@color/white"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:background="@color/alphablack2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="53dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false"
            app:tabMode="fixed"
            app:layout_scrollFlags="enterAlways"
            app:tabIndicatorColor="#057523"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="#009D85"
            app:tabTextColor="#ced0d3"
            android:background="@color/alphablack2">
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单设备" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周转箱"/>

        </android.support.design.widget.TabLayout>
    </LinearLayout>
</RelativeLayout>