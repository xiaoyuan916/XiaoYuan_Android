<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.JszpOrderDetailsActivity">
    <!--头布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/title_green">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/select_return_bt"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/return_bai" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </RelativeLayout>

    <!--上部信息布局01-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_query_order_state"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/jszp_engineering" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_query_order_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单编号：30014745335"
                    android:textColor="#ff292929"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_query_order_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000只"
                    android:textColor="#ff292929"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_query_order_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="南京市供电公司"
                    android:textColor="#ff999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_query_order_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已核验"
                    android:textColor="#ff009d85"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--上部信息布局02-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">

            <TextView
                android:layout_width="56dp"
                android:layout_height="14dp"
                android:text="配送库房"
                android:textColor="#ff999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_order_distribution_warehouse"
                android:layout_width="70dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:text="省中心库房"
                android:textColor="#ff292929"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">

            <TextView
                android:layout_width="56dp"
                android:layout_height="14dp"
                android:text="提报日期"
                android:textColor="#ff999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_order_presentation_date"
                android:layout_width="70dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:text="2018.06.25"
                android:textColor="#ff292929"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">

            <TextView
                android:layout_width="56dp"
                android:layout_height="14dp"
                android:text="剩余时限"
                android:textColor="#ff999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_order_residual_time"
                android:layout_width="70dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:text="6天6小时"
                android:textColor="#ff292929"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <!--下部分列式布局-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tb_order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/white"
        android:fillViewport="false"
        app:layout_scrollFlags="enterAlways"
        app:tabIndicatorColor="#057523"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#009D85"
        app:tabTextColor="#ced0d3">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="订单状态" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="订单明细" />
    </android.support.design.widget.TabLayout>

    <com.sgcc.pda.jszp.widget.NoScrollViewPager
        android:id="@+id/vp_order_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>