<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ManualActivity">

    <include android:id="@+id/ll_title" layout="@layout/layout_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_head"
        android:layout_below="@id/ll_title"
        android:text="请输入配送任务编号"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textColor="@color/text2"
        />

    <EditText
        android:id="@+id/et_tiaoxingma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_below="@id/tv_head"
        android:padding="8dp"
        android:background="@drawable/bg_green_stroke_coners"
        android:hint="请输入设备或周转箱条形码"
        android:textSize="16sp"
        android:theme="@style/MyEditText"

        />

    <Button
        android:id="@+id/bt_sure"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="251dp"
        android:background="@drawable/select_sure_bt"
        android:gravity="center"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>